{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "tests/**/*.ts"
  ],
  "ts-node": {
    "esm": false,
    "transpileOnly": true,
    "files": true,
    "skipIgnore": false,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

